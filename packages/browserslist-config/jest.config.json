{
    "collectCoverageFrom": [
        "**/src/**/*.js"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 70,
            "functions": 70,
            "lines": 70,
            "statements": 70
        }
    },
    "testMatch": [
        "<rootDir>/**/?(*.)spec.js"
    ],
    "testEnvironment": "node",
    "transform": {
        "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
        "node_modules/(?!@stilesdev)"
    ],
    "moduleFileExtensions": [
        "js",
        "json"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/build/",
        "/coverage/",
        "/dist/",
        "/bin/"
    ]
}
